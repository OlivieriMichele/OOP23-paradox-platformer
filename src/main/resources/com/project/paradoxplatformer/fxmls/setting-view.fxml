<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.project.paradoxplatformer.view.page.SettingsPage">
    <Button fx:id="backButton" text="Toggle Sound" />
    <Button fx:id="saveButton" text="Save" />
    
    <!-- Resolution Checkboxes -->
    <VBox spacing="10" padding="10">
        <CheckBox fx:id="resolution720p" text="1280x720" />
        <CheckBox fx:id="resolution1080p" text="1920x1080" />
        <CheckBox fx:id="resolution1440p" text="2560x1440" />
        <CheckBox fx:id="resolution4k" text="3840x2160" />
    </VBox>
</VBox>
